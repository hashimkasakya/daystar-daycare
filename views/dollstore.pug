doctype html
head
  title Add Doll
  link(rel='stylesheet' href='/css/styles/dollstore.css')
.form-container
  h1 Add a New Doll
  form(action='/add-doll' method='POST')
    label(for='dollsname') Doll&apos;s Name:
    input#dollsname(type='text' name='dollsname')
    label(for='price') Price:
    input#price(type='number' name='price')
    label(for='number') Number of Dolls:
    input#number(type='number' name='number')
    input(type='submit' value='Submit')
