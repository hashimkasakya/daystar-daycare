#content
  .card
    h2 Sitter Information Form
    form#sitterForm(method='POST' action='/registersitter')
      label(for='name') Name
      input#name(type='text' name='name')
      label(for='location') Location
      input#location(type='text' name='location')
      label(for='dob') Date of Birth
      input#dob(type='date' name='dob')
      label(for='gender') Gender
      select#gender(name='gender')
        option(value='male') Male
        option(value='female') Female
      label(for='nextOfKin') Next of Kin
      input#nextOfKin(type='text' name='nextOfKin')
      label(for='nin') NIN
      input#nin(type='text' name='nin')
      label(for='recommender') Recommender&apos;s Name
      input#recommender(type='text' name='recommender')
      label(for='religion') Religion
      input#religion(type='text' name='religion')
      label(for='education') Level of Education
      input#education(type='text' name='education')
      label(for='sitterNumber') Sitter Number
      input#sitterNumber(type='text' name='sitterNumber')
      label(for='contacts') Contacts
      input#contacts(type='text' name='contacts')
      input(type='submit' value='Submit')
