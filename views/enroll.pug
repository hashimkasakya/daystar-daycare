doctype html
head
  meta(charset='UTF-8')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  title Enroll Now Daystar Daycare
  link(rel='stylesheet' href='/css/bootstrap/css/bootstrap.css')
  link(rel='stylesheet' href='/css/styles/enroll.css')
// Header
header
  .container
    .logo
      img(src='images/ab.jpg' alt='Daycare Logo')
    nav
      ul
        li
          a(href='index.html') Home
        li
          a(href='about_us.html') About Us
        li
          a(href='services.html') Services
        li
          a(href='contact.html') Contact
        li
          a(href='enroll.html') Enroll Now
        li
          a(href='login_page.html') Administrator
// Enrollment Form Section
section.enrollment-form
  h2 Enrollment Form
  form#enrollmentForm(method='POST')
    label(for='babyName') Baby&apos;s Name:
    input#babyName(type='text' name='babyName' required='')
    label(for='gender') Gender:
    select#gender(name='gender' required='')
      option(value='male') Male
      option(value='female') Female
    label(for='age') Age:
    input#age(type='number' name='age' required='')
    label(for='location') Location:
    input#location(type='text' name='location' required='')
    label(for='bringerName') Name of Person Bringing the Baby:
    input#bringerName(type='text' name='bringerName' required='')
    label(for='arrivalTime') Time of Arrival:
    input#arrivalTime(type='time' name='arrivalTime' required='')
    label(for='parentsName') Parents&apos; Names:
    input#parentsName(type='text' name='parentsName' required='')
    label(for='fees') Fees (UGX):
    input#fees(type='text' name='fees' required='')
    label(for='stayPeriod') Period of Stay:
    input#stayPeriod(type='text' name='stayPeriod' required='')
    label(for='babyNumber') Baby Number:
    input#babyNumber(type='text' name='babyNumber' required='')
    label(for='collectorName') Name of Person Collecting the Baby:
    input#collectorName(type='text' name='collectorName' required='')
    label(for='departureTime') Time of Departure:
    input#departureTime(type='time' name='departureTime' required='')
    button(type='submit') Submit
// Contact Information Section
section.contact-information
  h2 Contact Information
  p
    | Additional contact details for parents who have questions or need assistance with enrollment.
  p Email: info@daystardaycare.com
  p Phone: +123456789
// FAQs Section
section.faqs
  h2 FAQs
  #faqList
    // FAQ items will be dynamically generated here using JavaScript
script.
  // JavaScript for dynamically generating FAQ items
  const faqList = document.getElementById('faqList');
  const faqs = [
  {
  question: 'What is the enrollment process?',
  answer: 'You can fill out the enrollment form on this page with your baby\\'s information.'
  },
  {
  question: 'How much are the fees?',
  answer: 'Please contact us for information about fees.'
  },
  {
  question: 'What are the daycare policies?',
  answer: 'You can find detailed daycare policies on our website or contact us for more information.'
  }
  ];
  faqs.forEach(faq => {
  const faqItem = document.createElement('div');
  faqItem.innerHTML = `<h3>${faq.question}</h3><p>${faq.answer}</p>`;
  faqList.appendChild(faqItem);
  });
  // JavaScript for form submission
  const enrollmentForm = document.getElementById('enrollmentForm');
  enrollmentForm.addEventListener('submit', function(event) {
  event.preventDefault();
  // Perform form submission handling here (e.g., sending data to a server)
  alert('Thank you for submitting your enrollment form!');
  });
script(src='css/bootstrap/js/bootstrap.bundle.js')
